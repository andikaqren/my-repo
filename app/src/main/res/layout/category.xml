<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/buttonCategoryMargin"

    >

    <ImageView
        android:layout_width="@dimen/categoryButtonSize"
        android:layout_height="@dimen/categoryButtonSize"
        android:layout_gravity="center"
        android:id="@+id/categoryImg"
        android:padding="20px"
        android:background="@drawable/categorybox"
        android:src="@drawable/electronic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/fontCategorySize"
        android:id="@+id/categoryName"
        android:textColor="@color/cardview_dark_background"
        android:text="Eletronic"/>
</LinearLayout>